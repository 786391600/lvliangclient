/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 
.userAuth{
  position:fixed;
  width: 100%;
  height: 500rpx;
  background: rgba(0,0,0,0.8);
  top: 0;
  bottom: 0;
  margin: auto 0;
  z-index: 100;
}
.userAuth-tip{
  position: fixed;
  width: 514rpx;
  top:0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  background: white;
  border-radius: 15rpx;
  height: 350rpx;
  box-sizing: border-box;
  padding: 35rpx 92rpx 35rpx;
  text-align: center;
}
.userAuth-tip text{
  font-size: 38rpx;
  line-height: 40rpx;
}
.userAuth-tip button{
  background: #D93035;
  color: white;
  margin-top: 35rpx;
}
.Underline {
  width: 122rpx;
  height: 20rpx;
  margin: 0 auto;
  border-bottom: 2px solid #df392d;
}
