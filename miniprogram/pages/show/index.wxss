/* pages/Testpage/OrderNumber/OrderNumber.wxss */
@import '../../style/iconfont.wxss';
.wxParse{
  padding-bottom: 118rpx;
}
.footer{
  position: fixed;
  bottom: 0;
  height: 118rpx;
  width: 100%;
  display:flex;
  flex-direction: row;
  background: white;
  justify-content: center;
}
.footer>view{
  height: 100%;
}
.footer-left{
  width: 46%;
  display:flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.footer-left >button {
  width: 90%;
  height: 90rpx;
  border-radius: 45rpx;
  text-align: center;
  line-height: 90rpx;
  color: white;
  background-color: #ccc;
}
.footer-right{
  width: 54%;
  display:flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.footer-right>view{
  width: 90%;
  height: 90rpx;
  border-radius: 45rpx;
  text-align: center;
  line-height: 90rpx;
  color: white;
  background-image: linear-gradient(to right, #fa709a 0%, #fee140 100%);
}
