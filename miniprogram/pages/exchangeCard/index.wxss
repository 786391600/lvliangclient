/* pages/Testpage/personal/index.wxss */
@import '../../style/iconfont.wxss';
page{
  background-color: #EFF2F7;
  height: 100%;
}
.card{
  width: 635rpx;
  height: 167rpx;
  background: #E3AD4D;
  border-radius: 15rpx;
  position: relative;
  overflow: hidden;
  display: flex;
  margin: 15rpx auto 15rpx;
}
.card-left{
  height: 100%;
  width: 194rpx;
  border-right: 2rpx dashed white;
  position: relative;
  line-height: 167rpx;
  text-align: center;
  font-size: 52rpx;
  color: white;
}
.card-right{
  height: 100%;
  width: 439rpx;
  position: relative;
  color: white;
  display: flex;
  align-items: center;
  padding: 25rpx;
  box-sizing: border-box;
  justify-content: space-around;
}
.card-info{
  display:flex;
  flex-direction:column;
  font-size: 28rpx;
}
.duihuan{
  font-size: 60rpx;
}
.card-left:before{
  content: '';
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  background: white;
  border-radius: 50%;
  right: -8rpx;
  top:-8rpx;
}
.card-left:after{
  content: '';
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  background: white;
  border-radius: 50%;
  right: -8rpx;
  bottom:-8rpx;
}
.activity-box{
  width: 718rpx;
  background: white;
  margin: 0 auto;
  padding: 0 16rpx 0;
  box-sizing: border-box;
}
.card-title{
  font-size: 30rpx;
  height: 55rpx;
  line-height: 55rpx;
  border-bottom: 1rpx solid #D9D9D9;
}
.card-box{
  padding: 30rpx 0 30rpx;
  width: 100%;
}
.More{
 text-align: center;
 padding: 100rpx 0;
}
.More view{
  color: #D9D9D9;
}
.More i{
  font-size: 100rpx;
  color: #D9D9D9;
}
